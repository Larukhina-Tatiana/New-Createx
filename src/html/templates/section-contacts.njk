<section class="contacts">
  <div class="container">
    <h2 class="section-subtitle reveal-top section-subtitle section-subtitle--center reveal-top">Contact us</h2>
    <p class="section-text reveal-bottom">
      Please complete the form. Detailed information will help us to make a tuned offer.
    </p>
    <div class="contacts__inner">
      <div class="images__thumb images__thumb--contact reveal-left">
        <picture>
          <source type="image/avif" srcset="
                images/contacts/image1@1x.avif 1x,
                images/contacts/image1@2x.avif 2x">
          <source type="image/webp" srcset="
                images/contacts/image1@1x.webp 1x,
                images/contacts/image1@2x.webp 2x">
          <img class="images__img" src="
                images/contacts/image1@1x.jpg" loading="lazy" decoding="async" alt="image">
        </picture>
      </div>

      <form class="contact-form reveal-right" action="#" id="contact-form" name="contactForm" data-js-form novalidate>
        <div class="contact-form__grup" role="group" aria-labelledby="contact-details-head">
          <div class="contact-form__data">
            <label class="form__label" for="first-name">
              <span class="form__label-legend">Name</span>
              <input class="form__input" type="text" name="first-name" id="first-name" placeholder="Your name"
                title="The name must be between 2 and 15 characters long, be one word, and contain no characters other than letters."
                required minlength="2" maxlength="15" placeholder="Your name" pattern="^[a-zA-ZА-Яа-яёЁЇїІіЄєҐґ]{2,15}$"
                autocomplete="on" itemprop="name">
              <span class="form-errors" data-js-form-field-errors role="alert"></span>
            </label>
            <label class="form__label" id="phone">
              <span class="form__label-legend">Phone</span>
              <input class="form__input" id="phone" type="tel" name="tel" data-js-phone placeholder="Your phone number"
                required pattern="^.{19}$" autocomplete="on" itemprop="telephone">
              <span class="progress-line"></span>
              <span class="form-errors" data-js-form-field-errors role="alert"></span>
            </label>
            <label class="form__label" for="email">
              <span class="form__label-legend">Email</span>
              <input class="form__input" type="email" name="email" id="email" placeholder="Your working email" required
                pattern="^[^\s@]+@[^\s@]+\.[^\s@]+" title=" Please specify in the format: user@example.com"
                oninvalid="this.setCustomValidity('Please enter a valid email address.')"
                onchange="this.setCustomValidity('') " autocomplete="email" itemprop="email">
              <span class="form-errors" data-js-form-field-errors role="alert"></span>
            </label>
          </div>

          <div class="contact-form__options">
            <label class="form__label" for="interested">I am interested in
              <select class="form__select form__input" name="interested" id="interested">
                <option value="" selected disabled>Choose Interested</option>
                <option value="Interior_design">Interior design</option>
                <option value="Graphic_designer">Graphic designer</option>
              </select>
            </label>
            <label class="form__label" for="location">
              <span class="form__label-legend">Location</span>
              <span class="form-errors" id="location-error" data-js-form-field-errors role="alert"></span>
              <select class="form__select form__input" name="location" id="location" required>
                <option value="" disabled selected>Choose location</option>
                <option value="New_York">New York</option>
                <option value="New_Jersey">New Jersey</option>
                <option value="San_Francisco">San Francisco</option>
              </select>
            </label>
            <fieldset class="form__fields">
              <legend>Preferred contact method</legend>
              <div class="form__fields-inner" tabindex="-1">
                <label class="custom-radio form-radio">
                  <input class="custom-radio__input" type="radio" value="Phone" name="contactMetod" required>
                  <span class="custom-radio__text">Phone</span>
                </label>
                <label class="custom-radio form-radio">
                  <input class="custom-radio__input" type="radio" value="Email" name="contactMetod" required>
                  <span class="custom-radio__text">Email</span>
                </label>
                <label class="custom-radio form-radio">
                  <input class="custom-radio__input" type="radio" value="Viber" name="contactMetod" required>
                  <span class="custom-radio__text">Viber</span>
                </label>
              </div>
              <span class="form-errors" id="contactMetod-error" data-js-form-field-errors role="alert"></span>
            </fieldset>
          </div>
        </div>

        <label class="form__label form__label--big" for="comment">
          <span class="form__label-legend">Message</span>
          <textarea class="form__textarea form__input" name="comment" id="comment" placeholder="Your message"
            title="The field must be filled" maxlength="1000" required></textarea>
          <span class="form-errors" data-js-form-field-errors role="alert"></span>
        </label>

        <div class="contact-form__policy-box">
          <input class="checkbox" type="checkbox" name="policy" id="policy" class="js-policy-checkbox" checked>
          <label class="checkbox__label" for="policy">
            <span class="checkbox__castom-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="10" height="8" fill="none">
                <path fill="#fff" fill-rule="evenodd"
                  d="M9.828.195c.23.26.23.683 0 .943L3.945 7.805a.54.54 0 0 1-.832 0L.173 4.47a.731.731 0 0 1 0-.942.54.54 0 0 1 .831 0L3.53 6.39 8.996.195a.54.54 0 0 1 .832 0Z"
                  clip-rule="evenodd" />
              </svg>
            </span>
            <span class="checkbox__text">I&nbsp;agree to&nbsp;receive communications from Createx Construction
              Bureau.</span>
          </label>

          <button class="button button--large" type="submit">send request</button>
        </div>

      </form>
    </div>
  </div>
</section>